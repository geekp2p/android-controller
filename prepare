docker compose exec adb-server bash -lc "adb kill-server || true; adb start-server -a -H 0.0.0.0 -P 5037"

docker compose exec adb-server bash -lc "/lib/systemd/systemd-udevd --daemon || true; udevadm control --reload-rules || true; udevadm trigger || true"


